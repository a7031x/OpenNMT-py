{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python: process data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/process_data.py"
        },
        {
            "name": "Python: process vocab",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/preprocess.py",
            "args": [
                "-train_src", "data/src-train.txt",
                "-train_tgt", "data/tgt-train.txt",
                "-valid_src", "data/src-val.txt",
                "-valid_tgt", "data/tgt-val.txt",
                "-save_data", "data/demo"
            ]
        },
        {
            "name": "Python: translate_de_en",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/translate.py",
            "args": [
                "-model", "iwslt-brnn2.s131_acc_62.71_ppl_7.74_e20.pt",
                "-src", "data/src-german.txt",
                "-output", "pred.txt",
                "-replace_unk",
                "-verbose"
            ]
        },
        {
            "name": "Python: train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "-data", "data/demo",
                "-save_model", "demo-model",
                "-gpuid", "0",
                "-epochs", "1000",
              //  "-train_from", "demo-model_acc_58.36_ppl_16.63_e18.pt",
                "-encoder_type", "transformer",
                "-decoder_type", "transformer",
                "-rnn_size", "512",
                "-src_word_vec_size", "512",
                "-tgt_word_vec_size", "512",
                "-optim", "adam",
                "-learning_rate", "0.001"
            ]
        },
        {
            "name": "Python: translate_demo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/translate.py",
            "args": [
                "-model", "demo-model_acc_9.75_ppl_542.35_e1000.pt",
                "-src", "data/src-test.txt",
                "-output", "pred.txt",
                "-replace_unk", "-verbose"
            ]
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "port": 3000,
            "secret": "my_secret",
            "host": "localhost"
        },
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "debugOptions": [
                "RedirectOutput",
                "Django"
            ]
        },
        {
            "name": "Python: Flask (0.11.x or later)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "module.name"
        },
        {
            "name": "Python: Pyramid",
            "type": "python",
            "request": "launch",
            "args": [
                "${workspaceFolder}/development.ini"
            ],
            "debugOptions": [
                "RedirectOutput",
                "Pyramid"
            ]
        },
        {
            "name": "Python: Watson",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/console.py",
            "args": [
                "dev",
                "runserver",
                "--noreload=True"
            ]
        },
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "module": "module.name",
            "env": {
                "VAR1": "1",
                "VAR2": "2"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "arg1",
                "arg2"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}